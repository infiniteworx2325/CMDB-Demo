                            @Html.DisplayFor(modelItem => item.vendorEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.createdDate)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.isActive)
                        </td>*@
                        
                        
                        <td>
                            @*@Html.ActionLink("Edit", "Edit", new { id=item.assetId },new { @class= "button-css" })*@ 
                            <input type="button" class="button-css" id="btnEdit" value="Update" onclick="location.href='@Url.Action("Edit", "Hardware",new { id = item.assetId })';return false;" @*onclick="window.location.href='/Asset/Hardware/Edit/@item.assetId'"*@ />




                        </td>
                        <td>
                            <input type="submit" value="Delete" class="button-css" onclick="return confirm('Do you want to delete this record')" />

                        </td>
                    </tr>
            }
        }

        </table>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script>

         $(document).ready(function () {
             if ('@TempData["IsDeleteMsg"]' != '')
        {
            alert('@TempData["IsDeleteMsg"]');
             }

             
             

             @*$('#btnCreate').click(function () {
                 document.location = '@Url.Action("Create","Hardware",)';
             });*@
        });

         function assetSearch() {
             var input, filter, table, tr, td, i;
             input = document.getElementById("searchInput");
             filter = input.value.toUpperCase();
             table = document.getElementById("tblAsset");
             tr = table.getElementsByTagName("tr");
             for (i = 0; i < tr.length; i++) {
                 td = tr[i].getElementsByTagName("td")[1];
                 if (td) {
                     if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                         tr[i].style.display = "";
                     } else {
                         tr[i].style.display = "none";
                     }
                 }
             }
         }

    </script>
